{
  // Markdown settings
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  
  // Markdownlint settings
  "markdownlint.config": {
    "default": true,
    "MD001": true,
    "MD003": {
      "style": "atx"
    },
    "MD007": {
      "indent": 2
    },
    "MD013": false,
    "MD024": {
      "allow_different_nesting": true
    },
    "MD033": {
      "allowed_elements": ["br", "details", "summary"]
    },
    "MD036": false,
    "MD041": false
  },
  
  // File associations
  "files.associations": {
    "*.md": "markdown"
  },
  
  // Auto-save settings
  "files.autoSave": "onFocusChange",
  
  // Editor settings for better markdown editing
  "editor.wordWrapColumn": 120,
  "editor.rulers": [120],
  
  // Spell checking
  "cSpell.words": [
    "Filmz",
    "imdb",
    "omdb",
    "uuid",
    "uuids",
    "CloudKit",
    "SwiftUI",
    "Xcode",
    "grtnr",
    "associatedtype"
  ]
}